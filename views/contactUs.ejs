                                    <span>Email <font color="red">*</font> </span>
                                    <input type="email" placeholder="abc@email.com" pattern=".+@.+.com" required>
                                </div>
                                <div class="inputBox">
                                    <span>Mobile <font color="red">*</font> </span>
                                    <input type="text" placeholder="+91 947 623 4293" required>
                                </div>
                            </div>

                            <div class="row100">
                                <div class="inputBox">
                                    <span>Message <font color="red">*</font> </span>
                                    <textarea placeholder="Please write your message here..." rows="3"></textarea>
                                </div>
                            </div>

                            <div class="row100">
                                <div class="inputBox">
                                    <input type="submit" value="Send">
                                </div>
                            </div>

