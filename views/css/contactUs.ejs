    .navsection .navul .navli .nava{
      font-size: 20px;
      color:white;
    }

    .nava.active{
      /* background:white;
      color: #CB0F80;
      transition: .5s; */
      text-decoration: underline;
      color: white;
    }

    .nava:hover{
      color: white;
    }

