<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;400&display=swap');

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins';
    text-decoration: none;
}

body{
    background: #116b6b;
}

.contactUs{
    position: relative;
    width: 100%;
    padding: 50px 100px;

}

.contactUs .title{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2.7rem;
}

.contactUs .title h2{
    color: #fff;
    font-weight: 550;
}

.form{
    grid-area: form;
}

.info{
    grid-area: info;
}

.map{
    grid-area: map;
}

.contact{
    background: #fff;
    padding: 40px;
    box-shadow: 0 5px 35px rgba(0, 0, 0, 0.15);
}

.box{
    position: relative;
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: 5fr 4fr;
    grid-template-areas: "form info" "form map";
    grid-gap: 20px;
    margin-top: 20px;
}

.contact h3{
    color: #116b6b;
    font-weight: 550;
    font-size: 1.4rem;
    margin-bottom: 10px;
}

.formBox{
    position: relative;
    width: 100%;
}

.formBox .row50{
    display: flex;
    gap: 20px;
}

.inputBox{
    display: flex;
    flex-direction: column;
    margin-bottom: 10px;
    width: 50%;
}

.formBox .row100 .inputBox{
    width: 100%;
}

.inputBox span{
    color: #116b6b;
    margin-top: 10px;
    margin-bottom: 5px;
    font-weight: 500;
}

.inputBox input, textarea{
    padding: 10px;
    font-size: 1.1rem;
    outline: none;
    border: 1px solid rgb(184, 184, 184);
}

.inputBox textarea{
    resize: none;
    margin-bottom: 10px;
    min-height: 220px;
}

.inputBox input[type="submit"]{
    background: #116b6b;
    border: none;
    font-size: 1.1rem;
    font-weight: 500;
    cursor: pointer;
    padding: 10px 12px;
    color: #fff;
    max-width: 120px;
    border-radius: 10rem;
}

.inputBox input[type="submit"]:hover{
   background: rgb(223, 38, 38);
   transition: 0.7s;
    font-size: 1.3rem;
}

/*  info    */

.info h3{
    color: #116b6b;
    font-weight: 550;
}

.info .infoBox div{
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}

.info .infoBox div span{
    color: #116b6b;
    min-width: 40px;
    height: 20px;
    justify-content: center;
    align-items: center;
    font-size: 1.5rem;
    margin-right: 15px;
}

#locu{
    color: #116b6b;
    font-size: 1.5rem;
}

.info .infoBox div p{
    color: rgb(101, 101, 101);
    font-size: 1.1rem;
}

.info .infoBox div a{
    color: rgb(101, 101, 101);
    text-decoration: none;
    font-size: 1.1rem;
}

.sci{
    margin-top: 40px;
    display: flex;
}

.sci li{
    list-style: none;
    margin-right: 15px;
}

.sci li a{
    color: #116b6b;
    font-size: 1.5rem;
    /* transition: all 0.5s ease; */
    margin-right: 1rem;
}

.sci li a:hover{
    font-size: 1.7rem;
    transition: all 0.4s ease;
}


.map{
    padding: 0;
}

.map iframe{
    height: 100%;
    width: 100%;
}



/*  footer  */

.footer_body{
    display: grid;
    justify-content: end;
    align-content: end;
    min-height: 100vh;
}

footer{
    position: relative;
    width: 100%;
    height: auto;
    padding: 50px 100px;
    background: #585858;
}

footer .container .sec img{
    width: 30%;
    border-radius: 1rem;
}

footer .container{
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-gap: 20px;
}

footer .container .sec h2{
    position: relative;
    color: #fff;
    font-weight: 500;
    margin-bottom: 15px;
}

footer .container .sec h2::before{
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 50px;
    height: 2px;
    background: #cb0f80;
}

footer .container .sec p{
    color: #fff;
}

.footer_sci{
    margin-top: 20px;
    display: grid;
    grid-template-columns: repeat(4, 50px);
    grid-gap: 10px;
}

.footer_sci li{
    list-style: none;
}

.footer_sci li a{
    display: inline-block;
    width: 48px;
    height: 48px;
    background: #2b2b2c;
    display: grid;
    align-content: center;
    justify-content: center;
    text-decoration: none;
    border-radius: 4px;
}

.footer_sci li a:hover{
    background: #787373;
}

.footer_sci li a .fa-brands, .fa-solid{
    color: #fff;
    font-size: 20px;
}

.footer_quicklinks{
    position: relative;
}

.footer_quicklinks li{
    list-style: none;
}

.footer_quicklinks li a{
    color: #f7f7f7;
    text-decoration: none;
    margin-bottom: 10px;
    display: inline-block;
}

.footer_quicklinks li a:hover{
    color: #cb0f80;
    font-weight: 600;
    font-size: 1.2rem;
    transition: all ease 0.5s;
}

.footer_sec_contact h2{
    position: relative;
    color: #fff;
    font-weight: 500;
    margin-bottom: 15px;
}

.footer_sec_contact h2::before{
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 50px;
    height: 2px;
    background: #cb0f80;
}

.footer_contact_info{
    position: relative;
}

.footer_contact_info li{
    display: grid;
    grid-template-columns: 30px 1fr;
    margin-bottom: 16px;
}

.footer_contact_info li span:nth-child(1){
    color: #fff;
    font-size: 20px;
}

.footer_contact_info li span{
    color: #fff;
}

.footer_contact_info a{
    color: #f7f7f7;
    text-decoration: none;
}

.footer_contact_info a:hover{
    color: #cb0f80;
}

.footer_copyrightText{
    width: 100%;
    background: #434346;
    padding: 8px 100px;
    text-align: center;
    color: #fff;
}


@media(max-width: 991px){
    footer{
        padding: 40px;
    }
    footer .container{
        grid-template-columns: repeat(2, 1fr);
    }
    .footer_copyrightText{
        padding: 8px 40px;
    }
}

@media(max-width: 768px){
    footer .container{
        grid-template-columns: repeat(1, 1fr);
    }
}

@media (max-width: 991px) { 
    body{
        background: #116b6b;
    }
    .contactUs{
        padding: 20px;
    }
    .box{
        position: relative;
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: auto;
        grid-template-areas: "form" "info" "map";
    }
    .map{
        min-height: 300px;
        padding: 0;
    }
    .formBox .row50{
        display: flex;
        gap: 0;
        flex-direction: column;
    }
    .inputBox{
        width: 100%;
    }
    .contact{
        padding: 30px;
    }
}






