    margin-right: 40px;
    cursor: pointer;
    display: none;
  }
  #check{
    display: none;
  }
  @media (max-width: 952px){
    .logo .logoimg{
      font-size: 30px;
      padding-left: 50px;
    }
    .navsection .navul .navli .nava{
      font-size: 16px;
    }
  }
  @media (max-width: 858px){
    .checkbtn{
      display: block;
    }
    .navul{
      position: fixed;
      width: 100%;
      height: 100vh;
