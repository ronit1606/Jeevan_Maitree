        <form action="/PatientReg" method="post">

        <div class="register">
          <div class="input_field">
            <input type="text" name="pname" placeholder="Enter Name" class="input" required>
          </div>
          <div class="input_field">
            <input type="email" name="pemail" placeholder="Enter E-mail" class="input" pattern=".+@.+.com" size="30" required>
          </div>
          <div class="input_field">
            <input type="text" name="pmn" placeholder="Enter Mobile Number" class="input" minlength="10" maxlength="10" required>
          </div>
          <div class="flex">
            <div class="input_field">
              <input type="text" name="page" placeholder="Age" class="input" required>
            </div>
            <div class="input_field" style="margin-left: 1rem;">
              <input type="text" name="pheight" placeholder="Height" class="input" required>
            </div>
          </div>
          <div class="flex">
            <div class="input_field">
              <input type="text" name="pweight" placeholder="Weight" class="input" required>
            </div>
            <div class="input_field" style="margin-left: 1rem;">
              <input type="text" name="pbp" placeholder="BP" class="input" required>
            </div>
          </div>
          <div class="input_field">
            <input type="password" name="ppass" placeholder="Enter Password" class="input" required>
          </div>
          <div class="input_field">
            <input type="password" placeholder="Confirm Password" class="input" required>
          </div>
          <!-- <div class="btn" id="btn" type="submit" onclick="btn"><a href="#">Register</a></div> -->
          <div class="btn" id="btn" onclick="btn">
            <input type="submit" value="Register">
          </div>
        </div>
      </form>
        <form action="/newPatientLogin" method="post">
          <div class="login">
            <div class="input_field">
              <input type="email" name="pemail" placeholder="E-mail" class="input" pattern=".+@.+.com" size="30" required>
            </div>
            <div class="input_field">
              <input type="password" name="ppass" placeholder="Password" class="input" required>
            </div>
            <a href="#">Forget Password?</a>
            <!-- <div class="btn"><a href="#">Login</a></div> -->
            <div class="btn" id="btn" onclick="btn">
              <input type="submit" value="Login">
            </div>
          </div>
        </form>
